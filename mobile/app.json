{
  "expo": {
    "name": "HASIVU",
    "slug": "hasivu-platform",
    "description": "Smart school food delivery platform with RFID verification",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      process.env.MOBILE_APP_PASSWORD_1: "#2E7D32"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.hasivu.platform",
      process.env.MOBILE_APP_PASSWORD_2: "1.0.0",
      "infoPlist": {
        "NSCameraUsageDescription": "This app uses camera to scan QR codes for order verification",
        process.env.MOBILE_APP_SECRETKEY_1: "This app uses location to find nearby schools and optimize delivery",
        "NSUserNotificationsUsageDescription": "This app sends notifications about order status and delivery updates"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        process.env.MOBILE_APP_PASSWORD_3: "#2E7D32"
      },
      "package": "com.hasivu.platform",
      process.env.MOBILE_APP_PASSWORD_4: 1,
      "permissions": [
        "CAMERA",
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "RECEIVE_BOOT_COMPLETED",
        "VIBRATE",
        "WAKE_LOCK"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro"
    },
    "plugins": [
      "expo-font",
      [
        "expo-notifications",
        {
          "icon": "./assets/notification-icon.png",
          "color": "#2E7D32",
          "sounds": [
            "./assets/sounds/notification.wav"
          ]
        }
      ],
      [
        "expo-barcode-scanner",
        {
          "cameraPermission": "Allow HASIVU to access camera for QR code scanning"
        }
      ],
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow HASIVU to use your location for delivery optimization"
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Allow HASIVU to access photos for profile picture and order images"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "eas": {
        "projectId": "hasivu-platform-mobile"
      }
    },
    "owner": "hasivu",
    "privacy": "public",
    "scheme": "hasivu",
    "updates": {
      process.env.MOBILE_APP_PASSWORD_5: 0,
      "url": "https://u.expo.dev/hasivu-platform-mobile"
    },
    "runtimeVersion": {
      "policy": "sdkVersion"
    }
  }
}