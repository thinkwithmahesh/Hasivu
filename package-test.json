{
  "name": "hasivu-platform-tests",
  "version": "1.0.0",
  "description": "HASIVU Platform Integration Test Suite",
  "scripts": {
    "test": "jest",
    "test:unit": "jest --testPathPattern=tests/unit",
    "test:integration": "jest --testPathPattern=tests/integration --runInBand",
    "test:security": "jest --testPathPattern=tests/integration/security.test.js --runInBand",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:debug": "node --inspect-brk node_modules/.bin/jest --runInBand",
    "test:setup": "node tests/scripts/setup-test-db.js",
    "test:teardown": "node tests/scripts/teardown-test-db.js",
    "security:audit": "npm audit && snyk test",
    "security:scan": "npm run test:security && bandit -r src/",
    "lint:security": "eslint src/ --config .eslintrc.security.js"
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "@babel/preset-typescript": "^7.23.0",
    "@types/jest": "^29.5.0",
    "@types/supertest": "^2.0.15",
    "babel-jest": "^29.7.0",
    "jest": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "jest-html-reporters": "^3.1.5",
    "jest-junit": "^16.0.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "@prisma/client": "^5.6.0",
    "bcrypt": "^5.1.1",
    "jsonwebtoken": "^9.0.2",
    "prisma": "^5.6.0"
  },
  "jest": {
    "preset": "./tests/jest.config.js"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "author": "HASIVU Development Team",
  "license": "MIT"
}
