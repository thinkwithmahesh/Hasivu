{
  "name": "hasivu-web",
  "version": "1.0.0",
  "description": "HASIVU Platform - React Web Portal",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "build:i18n": "next build && npm run i18n:compile",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "analyze": "cross-env ANALYZE=true next build",
    "clean": "rimraf .next out dist",
    "postinstall": "husky install",
    "_comment_playwright": "=== PLAYWRIGHT ENTERPRISE TESTING ===",
    "test:playwright": "playwright test",
    "test:ui": "playwright test --ui",
    "test:debug": "playwright test --debug",
    "test:headed": "playwright test --headed",
    "test:smoke": "playwright test --grep=\"@smoke\"",
    "test:regression": "playwright test --grep=\"@regression\"",
    "_comment_specific": "=== SPECIFIC TEST SUITES ===",
    "test:auth": "playwright test tests/auth/ --project=\"Desktop Chrome\"",
    "test:rfid": "playwright test tests/e2e/rfid-workflows.spec.ts --project=\"Desktop Chrome\"",
    "test:visual": "playwright test tests/visual/ --project=\"Desktop Chrome\"",
    "test:performance": "playwright test tests/performance/ --project=\"Desktop Chrome\"",
    "test:mobile": "playwright test --project=\"Mobile Chrome\" --project=\"Mobile Safari\"",
    "test:accessibility": "playwright test tests/accessibility/accessibility-testing.spec.ts",
    "test:accessibility:comprehensive": "playwright test tests/accessibility/ --project=\"Desktop Chrome\"",
    "test:accessibility:mobile": "playwright test tests/accessibility/ --project=\"Mobile Chrome\"",
    "_comment_environments": "=== ENVIRONMENT-SPECIFIC ===",
    "test:server": "NODE_ENV=test next dev -p 3000",
    "test:server:rfid": "NODE_ENV=test RFID_SIMULATION_MODE=true next dev -p 3000",
    "test:local": "playwright test --project=\"Desktop Chrome\" --headed --timeout=0",
    "test:ci": "playwright test --reporter=html,github",
    "_comment_visual": "=== VISUAL & PERCY ===",
    "test:percy": "percy exec -- playwright test tests/visual/",
    "test:visual:update": "playwright test tests/visual/ --update-snapshots",
    "test:screenshots": "playwright test --project=\"Desktop Chrome\" tests/visual/ --reporter=line",
    "_comment_reporting": "=== REPORTING & ANALYSIS ===",
    "test:report": "playwright show-report",
    "test:report:generate": "node scripts/generate-test-report.js",
    "test:metrics:calculate": "node scripts/calculate-test-metrics.js",
    "_comment_setup": "=== SETUP & MAINTENANCE ===",
    "test:install": "playwright install --with-deps",
    "test:setup": "npm run test:install && npm run setup:test-data",
    "setup:test-data": "node scripts/setup-test-data.js",
    "test:clean": "rm -rf test-results playwright-report .nyc_output coverage",
    "_comment_i18n": "=== INTERNATIONALIZATION ===",
    "i18n:extract": "next-i18next-extract",
    "i18n:compile": "next-i18next-compile",
    "i18n:validate": "node scripts/validate-translations.js",
    "_comment_accessibility": "=== ACCESSIBILITY AUDITING ===",
    "audit:accessibility": "node scripts/accessibility-audit.js",
    "audit:accessibility:critical": "node scripts/accessibility-audit.js --critical-only",
    "audit:accessibility:verbose": "node scripts/accessibility-audit.js --verbose",
    "test:a11y": "npm run test -- --testPathPattern=accessibility",
    "test:a11y:watch": "npm run test:watch -- --testPathPattern=accessibility",
    "_comment_quality": "=== QUALITY GATES ===",
    "quality:check": "npm run lint && npm run type-check && npm run test:smoke",
    "quality:full": "npm run lint && npm run type-check && npm run test:playwright && npm run test:accessibility",
    "quality:accessibility": "npm run test:a11y && npm run audit:accessibility",
    "precommit": "lint-staged && npm run quality:check"
  },
