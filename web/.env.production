# HASIVU Platform - Production Environment Configuration
# Frontend Environment Variables

# API Configuration
NEXT_PUBLIC_API_URL=https://api.hasivu.com
NEXT_PUBLIC_API_STAGE=prod
NEXT_PUBLIC_API_VERSION=v1

# AWS Configuration
NEXT_PUBLIC_AWS_REGION=ap-south-1
NEXT_PUBLIC_AWS_COGNITO_REGION=ap-south-1
NEXT_PUBLIC_AWS_COGNITO_USER_POOL_ID=ap-south-1_xxxxxxxxxxx
NEXT_PUBLIC_AWS_COGNITO_CLIENT_ID=xxxxxxxxxxxxxxxxxxxxxxxxxx

# Razorpay Configuration (Public Keys Only)
NEXT_PUBLIC_RAZORPAY_KEY_ID=rzp_live_xxxxxxxxxxxxxxxxxx

# WebSocket Configuration
NEXT_PUBLIC_WEBSOCKET_URL=wss://ws.hasivu.com
NEXT_PUBLIC_WEBSOCKET_PATH=/socket.io

# Analytics & Monitoring
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
NEXT_PUBLIC_SENTRY_DSN=https://xxxxxxxxxx@sentry.io/xxxxxxxxxx
NEXT_PUBLIC_HOTJAR_ID=xxxxxxxxxx

# Features Flags
NEXT_PUBLIC_ENABLE_RFID=true
NEXT_PUBLIC_ENABLE_PAYMENT_AI=true
NEXT_PUBLIC_ENABLE_WHATSAPP=true
NEXT_PUBLIC_ENABLE_PUSH_NOTIFICATIONS=true
NEXT_PUBLIC_ENABLE_DEMO_MODE=false
NEXT_PUBLIC_ENABLE_MAINTENANCE_MODE=false

# Public Assets
NEXT_PUBLIC_CDN_URL=https://cdn.hasivu.com
NEXT_PUBLIC_IMAGE_CDN_URL=https://images.hasivu.com
NEXT_PUBLIC_VIDEO_CDN_URL=https://videos.hasivu.com

# Demo Configuration
NEXT_PUBLIC_DEMO_VIDEO_URL=https://www.youtube.com/embed/ACTUAL_VIDEO_ID
NEXT_PUBLIC_DEMO_RFID_READER_ID=demo-reader-001
NEXT_PUBLIC_DEMO_SCHOOL_ID=demo-school-001

# Support & Contact
NEXT_PUBLIC_SUPPORT_EMAIL=support@hasivu.com
NEXT_PUBLIC_SALES_EMAIL=sales@hasivu.com
NEXT_PUBLIC_SUPPORT_PHONE=+91-1800-HASIVU
NEXT_PUBLIC_WHATSAPP_NUMBER=+919999999999

# Social Media
NEXT_PUBLIC_TWITTER_HANDLE=@hasivuplatform
NEXT_PUBLIC_LINKEDIN_URL=https://linkedin.com/company/hasivu
NEXT_PUBLIC_FACEBOOK_URL=https://facebook.com/hasivuplatform

# Legal Pages
NEXT_PUBLIC_TERMS_URL=https://hasivu.com/terms
NEXT_PUBLIC_PRIVACY_URL=https://hasivu.com/privacy
NEXT_PUBLIC_SECURITY_URL=https://hasivu.com/security

# Third-party Integrations
NEXT_PUBLIC_INTERCOM_APP_ID=xxxxxxxxxx
NEXT_PUBLIC_CRISP_WEBSITE_ID=xxxxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx

# Rate Limiting
NEXT_PUBLIC_API_RATE_LIMIT=1000
NEXT_PUBLIC_API_RATE_WINDOW=60000

# Cache Configuration
NEXT_PUBLIC_CACHE_TTL=3600
NEXT_PUBLIC_STATIC_CACHE_TTL=86400

# Next.js Configuration (Server-side only, not exposed to client)
NEXTAUTH_URL=https://app.hasivu.com
NEXTAUTH_SECRET=your-secret-key-here-change-in-production

# Database (Server-side only)
DATABASE_URL=postgresql://user:password@host:5432/hasivu_prod

# Redis (Server-side only)
REDIS_URL=redis://user:password@redis-host:6379

# AWS Secrets Manager (Server-side only)
AWS_SECRET_ACCESS_KEY=your-secret-access-key
AWS_ACCESS_KEY_ID=your-access-key-id

# Email Service (Server-side only)
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASS=your-sendgrid-api-key

# Monitoring (Server-side only)
NEW_RELIC_LICENSE_KEY=your-new-relic-key
DATADOG_API_KEY=your-datadog-key
